@{
    var razorPageName = ViewContext.RouteData.Values["page"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trippy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="bg-dark mb-3 border-bottom">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary pb-3 px-3">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><i class="bi bi-stoplights"></i>Trippy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-lg-fill align-items-center ">
                        <li class="nav-item">
                            <a class="nav-link@(razorPageName == "/Index" ?  " active" : "")" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(razorPageName == "/Privacy" ?  " active" : "")" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark py-3">
        <div class="container">
            &copy; @DateTime.Now.ToString("yyyy") - Trippy
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
