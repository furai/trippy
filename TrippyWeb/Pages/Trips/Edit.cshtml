@page
@model TrippyWeb.Pages.Trips.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trip</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Trip.TripID" />
                <input type="hidden" asp-for="Trip.OwnerID" />
                <input type="hidden" asp-for="Trip.Map" />
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Trip.Beginning" class="form-control" />
                        <label asp-for="Trip.Beginning" class="control-label"></label>
                        <span asp-validation-for="Trip.Beginning" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Trip.Destination" class="form-control" />
                        <label asp-for="Trip.Destination" class="control-label"></label>
                        <span asp-validation-for="Trip.Destination" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Trip.StartDate" class="form-control" />
                        <label asp-for="Trip.StartDate" class="control-label"></label>
                        <span asp-validation-for="Trip.StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Trip.DurationInMinutes" class="form-control" />
                        <label asp-for="Trip.DurationInMinutes" class="control-label"></label>
                        <span asp-validation-for="Trip.DurationInMinutes" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Trip.FreeSpots" class="form-control" />
                        <label asp-for="Trip.FreeSpots" class="control-label"></label>
                        <span asp-validation-for="Trip.FreeSpots" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Trip.Price" class="form-control" />
                        <label asp-for="Trip.Price" class="control-label"></label>
                        <span asp-validation-for="Trip.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="FileUpload.FormFile" class="form-control" />
                        <label asp-for="FileUpload.FormFile" class="control-label"></label>
                        <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Trip.Stops" class="form-control" />
                        <label asp-for="Trip.Stops" class="control-label"></label>
                        <span asp-validation-for="Trip.Stops" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check mb-3">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Trip.NonSmoking" />
                            @Html.DisplayNameFor(model => model.Trip.NonSmoking)
                        </label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (@Model.MapImage != null)
        {
            <img src="@Model.MapImage" alt="Trip Map">
        }
        else
        {
            <span>No map image uploaded.</span>
        }
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <partial name="../../Pages/Shared/_ValidationScriptsPartial" />
}
